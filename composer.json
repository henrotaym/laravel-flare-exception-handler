{
    "name": "henrotaym/laravel-flare-exception-handler",
    "description": "Simple exception handler logging exception context to flare.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Mathieu Henrotay",
            "email": "mathieu.henrotay@gmail.com"
        }
    ],
    "require": {
        "spatie/laravel-ignition": "^2.0"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Henrotaym\\LaravelFlareExceptionHandler\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Henrotaym\\LaravelFlareExceptionHandler\\Tests\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Henrotaym\\LaravelFlareExceptionHandler\\Providers\\LaravelFlareExceptionHandlerServiceProvider"
            ]
        }
    }
}
